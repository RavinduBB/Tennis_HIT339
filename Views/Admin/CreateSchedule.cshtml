@model AnyoneForTennis.Models.Schedule

@{
    
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f7f9fc;
        margin: 20px;
    }

    h1 {
        color: white;
        margin-bottom: 20px;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        background: linear-gradient(135deg, #6D83F2, #F25E73);
        padding: 10px;
        border-radius: 5px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        font-weight: bold;
        color: #555;
    }

    .form-control {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        transition: border-color 0.3s;
    }

    .form-control:focus {
        border-color: #6D83F2;
        outline: none;
        box-shadow: 0 0 5px rgba(109, 131, 242, 0.5);
    }

    .text-danger {
        color: #d9534f;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6D83F2, #F25E73);
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 15px;
        cursor: pointer;
        transition: background 0.3s;
    }

    .btn-primary:hover {
        opacity: 0.9;
        transform: scale(1.05);
    }
</style>

<h1>Create Schedule</h1>

<form asp-action="CreateSchedule">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location" class="control-label"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CoachId" class="control-label"></label>
        <select asp-for="CoachId" class="form-control" asp-items="ViewBag.Coaches"></select>
        <span asp-validation-for="CoachId" class="text-danger"></span>
    </div>
    <div class="form-group mt-4">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
